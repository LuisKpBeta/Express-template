extends ../layouts/layout

block content
  .row.mt-5
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3 New Password
        form(action="/new-password" method="POST")
          .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", placeholder="Enter New Password")
          input(type="hidden", name="_csrf", value=csrfToken)
          input(type="hidden", name="userId", value=userId)
          input(type="hidden", name="passwordToken", value=passwordToken)
          button.btn.btn-primary.btn-block(type="submit") Update Password